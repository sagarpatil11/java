package com.service;

import java.util.Scanner;
import java.util.HashMap;
import java.util.LinkedList;

import com.controller.AddressBookController;
import com.model.Person;

public class AddressBookService implements addressbookservice
{
	String fname,lname,address,city,state;
	static String addbookname;
	long mobno;
	int zipcode;
	Scanner s=new Scanner(System.in);
	AddressBookController conobj=new AddressBookController();
	
	HashMap<String,LinkedList<Person>> hmap = new HashMap<String,LinkedList<Person>>();
	LinkedList<Person> llist=new LinkedList<>();
	
	@Override
	public void createAddrBook() 
	{
		// TODO Auto-generated method stub
		System.out.println("Enter the name of Address book you want create: ");
		addbookname=s.next();
		//conobj.addPerson();
		addNewPerson();
		System.out.println("Address created Succssfully");
	}

	@Override
	public void addNewPerson() 
	{
		// TODO Auto-generated method stub
		System.out.println("Enter the First name:");
		fname=s.next();
		System.out.println("Enter the Last name:");
		lname=s.next();
		System.out.println("Enter the address:");
		address=s.next();
		System.out.println("Enter the City:");
		city=s.next();
		System.out.println("Enter the State:");
		state=s.next();
		System.out.println("Enter the Mobile number:");
		mobno=s.nextLong();
		System.out.println("Enter the Zipcode:");
		zipcode=s.nextInt();
		
		Person p=new Person(fname, lname, address, city, state, mobno, zipcode);
		
		llist.add(p);
		hmap.put(addbookname, llist);
		System.out.println("Person added Succssfully");
	}

}
